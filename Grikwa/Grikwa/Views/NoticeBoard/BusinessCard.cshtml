@model Grikwa.Models.BusinessCardModel

@{
    ViewBag.Title = "My Adverts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="row">

    <div class="col-sm-2">
        @*@Html.Partial("_CategoryPartial")*@
    </div>

    <div class="col-sm-10">

        @*@Html.Partial("_BusinessCardPartial", @Model)*@

        @if (Model.Products == null || Model.Products.Count() == 0)
        {
            <div class="body-content">
                <h1>No products found</h1>
            </div>
        }
        else
        {
            <div class="row table-responsive">
                @foreach (var item in Model.Products)
                {
                    @Html.Partial("_CatalogProductPartial", item)
                }
            </div>
        }

    </div>
    <div class="row center">
        @Html.Partial("_PaginationPartial")
    </div>
</div>
@section scripts{
    <script src="~/Scripts/ace-elements.min.js"></script>
    <script src="~/Scripts/autoNumeric/autoNumeric-1.9.18.min.js"></script>
    <script type="text/javascript">
        $(".price").each(function (index) {
            var price = Number($(this).html());
            $(this).autoNumeric('init');
            $(this).autoNumeric("set", price);
        });
    </script>
}