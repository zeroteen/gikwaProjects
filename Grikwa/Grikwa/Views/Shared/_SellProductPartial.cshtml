@model Grikwa.Models.SoldProductModel

@using (Html.BeginForm("SellProduct", "Store", FormMethod.Post, new { @class = "form-horizontal col-sm-2", role = "form", @id = "sellProductForm" }))
{
    <h4>Sell Product.</h4>
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.ProductID, new { @class = "control-label" })
        <div class="">
            @Html.DropDownListFor(m => m.ProductID, Model.Products, "--select--", new
       {
           @class = "form-control",
           onchange = "getPendingUsers();"
       })
            @Html.ValidationMessage("ProductID")
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CustomerID, new { @class = "control-label" })
        <div class="">
            <select name="CustomerID" class="form-control" id="CustomerID">
                <option value="">--select--</option>
            </select>
            @Html.ValidationMessage("CustomerID")
        </div>
    </div>
    <div class="form-group">
        <div class="">
            <input type="submit" class="btn btn-default" value="Sell Product" />
        </div>
    </div>
}