
@using (Html.BeginForm("Search", "Store", FormMethod.Post, new {@class = "navbar-form navbar-left"}))
{
    <div class="form-group">
        <input name="query" id="query" type="text" class="form-control" placeholder="Search for a product" />
    </div>
    <div class="form-group">
        <button value="" type="submit" class="btn btn-purple">
            <i class="icon-search"></i>
            Search
        </button>
    </div>
}