@model IEnumerable<Grikwa.Models.Conversation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FromUser.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToUser.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MessageStatus)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FromUser.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ToUser.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MessageStatus)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ConversationID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ConversationID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ConversationID })
        </td>
    </tr>
}

</table>
