@model IEnumerable<Grikwa.Models.InstitutionViewModel>

@{
    ViewBag.Title = "Select Institution Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="center institution-list">
    @foreach (var institution in Model)
    {
        <div class="col-md-3">
            <a href="@Url.Action("Institution", "Store", new { name = institution.Code })"><span class="community">@institution.Name</span></a>
        </div>
    }
